<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../app/head %>
    </head>

    <body>
        <% include ../app/nav %>

        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-6">
                    <form method="POST" action="/credits/apply">
                        <fieldset>
                            <legend>Apply for a credit</legend>

														<input type="hidden" name="loaner" value="<%= proposal.user_id %>">

														<input type="hidden" name="proposal_id" value="<%= proposal.id %>">

                            <div class="form-group">
                                <label for="amount">Amount</label>
                                <input type="number" class="form-control disabled" id="amount" name="amount" value="<%= proposal.amount %>">
                            </div>

                            <div class="form-group">
                                <label for="interest_rate">Interest rate</label>
                                <input type="number" class="form-control disabled" id="interest_rate" name="interest_rate" value="<%= proposal.interest %>">
                            </div>

                            <div class="form-group">
                                <label for="deadline">Deadline</label>
                                <input type="date" class="form-control disabled" id="deadline" name="deadline" value="<%= proposal.finalDate %>">
                            </div>

														<div class="form-group">
																<label for"projects">Project</label>
																<select class="selectpicker" id="projects" name="project_id">
																	<% for (var i = 0; i < projects.length; i++) { %>
																		<option value="<%= projects[i].id %>"><%= projects[i].title %></option>
																	<% } %>
																</select>
														</div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success">Create</button>
                                <a href="/loans" class="btn btn-light">Cancel</a>
                            </div>
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>

        <% include ../app/script %>
    </body>
</html>
