                            <tr>
                                <th scope="col">Amount</th>
                                <th scope="col">Interest rate</th>
                                <th scope="col">Deadline</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            <% for(var i=0; i < credits.length; i++) {%>
                            <tr>
                                <td><%= credits[i].amount %>â‚¬</td>
                                <td><%= credits[i].interest %>%</td>
                                <td><%= credits[i].finalDate %></td>
                                <td>
                                    <button type="button" name="button" class="btn btn-info">Apply</button>
                                </td>
                            </tr>
                        </tbody>
                            <% } %>
                    </table>
                    <% } %>
                </div>
            </div>
        </div>

        <% include ../app/script %>
    </body>
</html>
