<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../app/head %>
    </head>

    <body>
        <% include ../app/nav %>

        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-6">
                    <form method="POST" action="/api/project/create">
                        <fieldset>
                            <legend>Create new project</legend>

                            <input type="hidden" name="user_id" value="<%= user.id %>">

                            <div class="form-group">
                                <label for="image">Image</label>
                                <input type="text" class="form-control" id="image" name="image" placeholder="Enter image URL">
                            </div>

                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
                            </div>

                            <div class="form-group">
                                <label for="description">Description</label>
                                <textarea type="textarea" class="md-textarea form-control" rows=5 id="description" name="description" placeholder="Enter description"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="demand">Amount needed</label>
                                <input type="number" class="form-control" id="demand" name="demand" placeholder="Enter amount">
                            </div>

							<div class="form-group">
                                <label for="url">Website URL</label>
                                <input type="text" class="form-control" id="url" name="url" placeholder="If you have a website for the project, add it">
                            </div>

                            <button type="submit" class="btn btn-primary">Create</button>
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>

        <% include ../app/script %>
    </body>
</html>
