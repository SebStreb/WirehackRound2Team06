    <body>
        <% include ../app/nav %>

        <div class="container">
            <div class="jumbotron text-center">
                <h1 class="display-3">Projects</h1>
                <p class="lead text-muted">Projects in MicroLoan help people to grow their developing country.</p>
            </div>

            <div class="row">
                <% if(projects.length == 0) {%>
                    <div class="alert alert-secondary" role="alert">
                        <p>We have no current project that need funding. Help us out by <a href="projects/create">adding one</a> ? </p>
                    </div>
                 <% } %>

                <% if(projects.length != 0) {%>
                <% for(var i=0; i < projects.length; i++) {%>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src= <%= projects[i].image_url %> class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"/>
                        <div class="card-body">
                            <h5 class="card-title"><%= projects[i].title %></h5>

                            <h6 class="card-subtitle mb-2 text-muted">
                                <span class="badge badge-secondary"><%= projects[i].demand %>€</span>
                                <% if(projects[i].risk == 1) {%>
                                    <span class="badge badge-success">Low risk</span>
                                <% } %>
                                <% if(projects[i].risk == 2) {%>
                                    <span class="badge badge-success">Medium risk</span>
                                <% } %>
                                <% if(projects[i].risk == 3) {%>
                                    <span class="badge badge-failure">High risk</span>
                                <% } %>
                            </h6>

                            <p class="card-text"><%= projects[i].description %></p>

                            <a href="#" class="btn btn-primary btn-block">Invest</a>
                        </div>
                    </div>
                </div>
                <% } %>
                <% } %>
