<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../app/head %>
    </head>

    <body>
        <% include ../app/nav %>

        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-12">
									<h1>
										<%= locals.user.username %>
										<a href="/users/review/..." class="btn btn-primary float-right">Add review</a>
									</h1>
									<!-- form to change user ? -->
									<% if (reviews.length == 0) { %>
										<p> Message </p>
									<% } else { %>
										<table class="table table-hover">
											<thead>
												<tr>
													<th scope="col">Date</th>
													<th scope="col">From</th>
													<th scope="col">Rating</th>
													<th scope="col">Comment</th>
												</tr>
											</thead>
											<tbody>
												<% for (var i = 0; i < reviews.length; i++) { %>
													<tr>
														<td><%= reviews[i].date %></td>
														<td><%= reviews[i].user_from %></td>
														<td><%= reviews[i].rating %></td>
														<td><%= reviews[i].comment %></td>
													</tr>
												<% } %>
											</tbody>
										</table>
									<% } %>
                </div>
            </div>
        </div>

        <% include ../app/script %>
    </body>
</html>
